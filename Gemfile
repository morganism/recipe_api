# Gemfile
source 'https://rubygems.org'

gem "sinatra", require: 'sinatra/base'
gem 'sinatra-activerecord', require: false
gem 'sinatra-contrib', require: false

gem 'mongoid'
# Required to use some advanced features of# Sinatra, like namespaces
gem 'puma'

# tests
gem "rack"
gem "activesupport"
group :test do
  gem "rspec"
  gem "rack-test"
end
